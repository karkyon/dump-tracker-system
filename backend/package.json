{
  "name": "dump-tracker-backend",
  "version": "1.0.0",
  "description": "ダンプ運行記録システム - バックエンドAPI",
  "main": "dist/server.js",
  "prisma": {
    "schema": "prisma/schema.camel.prisma"
  },
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "db:setup": "npm run db:create && npm run db:migrate && npm run db:seed",
    "db:create": "createdb dump_tracker || true",
    "db:migrate": "node -e \"console.log('マイグレーション実行')\"",
    "db:seed": "node -e \"console.log('シードデータ投入')\"",
    "db:reset": "npm run db:drop && npm run db:setup",
    "db:drop": "dropdb dump_tracker || true",
    "db:ping": "pg_isready -h localhost -p 5432",
    "gdrive:upload": "./scripts/development/upload_templates_to_gdrive.sh",
    "gdrive:download": "./scripts/development/download_from_gdrive.sh",
    "gdrive:sync": "./scripts/development/sync_with_gdrive.sh",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "api:start": "npm run build && npm start",
    "api:dev": "npm run dev",
    "type-check": "tsc --noEmit",
    "test:build": "npm run clean && npm run build",
    "prisma:generate": "prisma generate --schema=prisma/schema.camel.prisma",
    "prisma:migrate": "prisma migrate dev --schema=prisma/schema.camel.prisma",
    "prisma:studio": "prisma studio --schema=prisma/schema.camel.prisma",
    "prisma:push": "prisma db push --schema=prisma/schema.camel.prisma",
    "prisma:pull": "prisma db pull --schema=prisma/schema.camel.prisma"
  },
  "dependencies": {
    "@prisma/client": "^6.16.0",
    "@types/bcrypt": "^6.0.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.11.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.4",
    "pg": "^8.11.3",
    "prisma": "^6.14.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.0",
    "winston": "^3.10.0",
    "yamljs": "^0.3.0",
    "zod": "^4.1.5",
    "zod-prisma-types": "^3.2.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-serve-static-core": "^4.17.35",
    "@types/express-validator": "^2.20.33",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.19.0",
    "@types/nodemailer": "^6.4.9",
    "@types/pg": "^8.10.2",
    "@types/supertest": "^2.0.12",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "eslint": "^8.45.0",
    "jest": "^29.6.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}
