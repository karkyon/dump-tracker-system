{
  "name": "dump-tracker-backend",
  "version": "1.0.0",
  "description": "ダンプ運行記録システム - バックエンドAPI",
  "main": "dist/index.js",
  "prisma": {
    "schema": "prisma/schema.camel.prisma"
  },
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "check:critical": "tsc --noEmit",
    "check:strict": "tsc --noEmit --strict",
    "lint:critical": "eslint 'src/**/*.ts' --max-warnings 0",
    "check:circular": "madge --circular --extensions ts src/",
    "check:circular:graph": "madge --circular --extensions ts --image graph.png src/",
    "check:default-exports": "node scripts/check-default-exports.js",
    "validate:priority": "npm run check:circular && npm run check:default-exports",
    "validate:critical": "npm run check:critical && npm run lint:critical && npm run check:circular",
    "validate:all": "npm run validate:priority && npm run check:critical && npm run lint:critical",
    "fix:critical": "eslint 'src/**/*.ts' --fix",
    "watch:check": "tsc --noEmit --watch",
    "prebuild": "npm run validate:critical"
  },
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "bcryptjs": "^3.0.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "4.6.3",
    "uuid": "^9.0.1",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.4",
    "@types/multer": "^2.0.0",
    "@types/node": "^18.19.0",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^10.0.0",
    "eslint-plugin-import": "^2.32.0",
    "madge": "^8.0.0",
    "nodemon": "^3.0.1",
    "prisma": "^6.16.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
