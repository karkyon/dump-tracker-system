# =====================================
# Dump Tracker Backend - 環境変数設定
# =====================================

# アプリケーション基本設定
NODE_ENV=production
PORT=3001

# データベース設定
DATABASE_URL=postgresql://dump_tracker_user:YOUR_PASSWORD@localhost:5432/dump_tracker_prod

# JWT設定
JWT_SECRET=your-super-secure-jwt-secret-min-32-characters-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Redis設定
REDIS_HOST=127.0.0.1
REDIS_PORT=6379

# CORS設定
ALLOWED_ORIGINS=http://localhost:3000,http://YOUR_IP:3001

# ログ設定
LOG_LEVEL=info
LOG_FILE_PATH=/home/karkyon_dump/projects/dump-tracker/backend/logs

# セキュリティ
BCRYPT_ROUNDS=10

# =====================================
# Swagger API文書設定
# =====================================
# Swagger表示用のホスト・ポート・プロトコル設定
SWAGGER_HOST=localhost
SWAGGER_PORT=3001
SWAGGER_PROTOCOL=http

# HTTPS使用フラグ (true/false)
USE_HTTPS=false

